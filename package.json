{
  "name": "@dolasoftfree/logger",
  "version": "2.0.4",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "description": "Simple, universal logging library for React, Next.js, and Node.js applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "API_REFERENCE.md",
    "EXAMPLES.md",
    "CONTRIBUTING.md",
    "TESTING.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c",
    "build:dev": "NODE_ENV=development rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "check": "npm run lint && npm run type-check && npm run test:run && npm run build:prod",
    "pre-release": "npm run check && git add . && git commit -m 'chore: prepare for release'",
    "prepublishOnly": "npm run check",
    "version": "npm run build:prod",
    "postversion": "git push && git push --tags",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "logger",
    "logging",
    "enterprise",
    "typescript",
    "react",
    "nextjs",
    "express",
    "nodejs",
    "monitoring",
    "debugging"
  ],
  "author": {
    "name": "DolaSoft",
    "url": "https://github.com/dolasoft"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolasoft/-dolasoft-logger.git"
  },
  "bugs": {
    "url": "https://github.com/dolasoft/-dolasoft-logger/issues"
  },
  "homepage": "https://github.com/dolasoft/-dolasoft-logger#readme",
  "peerDependencies": {
    "next": ">=12.0.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^3.2.4",
    "audit-ci": "^7.0.1",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jsdom": "^22.1.0",
    "rollup": "^4.4.0",
    "rollup-plugin-dts": "^6.1.0",
    "size-limit": "^11.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4",
    "webidl-conversions": "^7.0.0",
    "whatwg-url": "^11.0.0"
  }
}
